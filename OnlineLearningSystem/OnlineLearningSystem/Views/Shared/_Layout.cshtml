<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-editable.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <link href="~/Content/css/project.css" rel="stylesheet" />
    <script src="~/Scripts/project.js"></script>
</head>

<body style="background-image: url('../../Content/images/bg.png')">
    <div class="container">
        <div class="row">

            <div class="col-lg-12" style="margin:10px">
                <ul class="nav navbar-nav col-lg-6" style="">
                        <li class="menu">
                            @Html.ActionLink("Home","Index", "Teacher")
                        </li>
                        <li class="menu">
                            @Html.ActionLink("Student", "StudentView", "Teacher",null, new { @class = "studentview" })
                        </li>
                        <li class="menu">
                            @Html.ActionLink("Assignment", "AssignmentView", "Teacher", null,new { @class = "assignmentview" })
                        </li>
                        <li class="menu">
                            @Html.ActionLink("Message", "MessageView", "Teacher", null,new { @class = "messageview" })
                        </li>
                </ul>

                <div class="col-lg-3 pull-right " style="margin:10px -3px">
                    <div class="col-lg-6"><h4>Hello,@Session["loggedinusername"]</h4></div>
                    <div class="dropdown col-lg-6">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            My stuff
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li>@Html.ActionLink("My accound", "")</li>
                            <li>@Html.ActionLink("Log Out", "logout", "Login")</li>
                        </ul>
                    </div>
                </div>
            </div>




        </div>
        <hr />
        @RenderBody()
    </div>

</body>
</html>


