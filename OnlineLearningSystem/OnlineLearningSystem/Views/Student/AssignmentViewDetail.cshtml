@model IEnumerable<OnlineLearningSystem.Models.Assignments>
@{
    ViewBag.Title = "Download";
    Layout = "~/Views/Shared/Student.cshtml";
}

<ul class="list-group">


        <div id="messageDisplay"></div>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Assignment Title</label>
                <div class="col-lg-8 assignmentname" id=@Model.First().id>@Model.First().name</div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Recources</label>
                <div class="col-lg-8">@Model.First().resources</div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Description</label>
                <div class="col-lg-8">@Model.First().description</div>
            </div>
        </li>

        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Question 1</label>
                <div class="col-lg-8 question">@Model.First().Question1</div>
                <div class="col-lg-8"><textarea class="form-control" rows="3" id="answer1">@Model.First().Answer1</textarea></div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Question 2</label>
                <div class="col-lg-8 question">@Model.First().Question2</div>
                <div class="col-lg-8"><textarea class="form-control" rows="3" id="answer2">@Model.First().Answer2</textarea></div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Question 3</label>
                <div class="col-lg-8 question">@Model.First().Question3</div>
                <div class="col-lg-8"><textarea class="form-control" rows="3" id="answer3">@Model.First().Answer3</textarea></div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Question 4</label>
                <div class="col-lg-8 question">@Model.First().Question4</div>
                <div class="col-lg-8"><textarea class=" form-control" rows="3" id="answer4">@Model.First().Answer4</textarea></div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">Question 5</label>
                <div class="col-lg-8 question">@Model.First().Question5</div>
                <div class="col-lg-8"><textarea class="form-control" rows="3" id="answer5">@Model.First().Answer5</textarea></div>
            </div>
        </li>
        <li class="list-group-item ">
            <div class="row">
                <label class="col-lg-4 ">File</label>
                <div class="col-lg-8">
                    @foreach (var ab in ViewBag.files)
                    {
                        <ul>
                            <li>@ab  @Html.ActionLink("Downloads", "Download", new { ImageName = ab })</li>
                        </ul>

                    }
                </div>
            </div>

        </li>
        @if (@Model.First().Submitted == 1)
        {

        }
        else
        {
            <li class="list-group-item ">
                <div class="row">
                    <div class="col-lg-12">
                        <button class="btn btn-danger" id="submitanswer">Submit</button>
                        <button class="btn btn-default closemodal" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </li>
        }





</ul>


