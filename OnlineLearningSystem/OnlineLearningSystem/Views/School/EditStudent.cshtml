@model OnlineLearningSystem.Models.user_info
@{
    ViewBag.Title = "School-EditStudent";
}

<h2>EditStudent</h2>
@*edit student*@
<div id="myModalEditTeacher" class="modal fade" role="dialog">
    @using (Html.BeginForm("EditStudent", "School", FormMethod.Post))
    {
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Teacher</h4>
                </div>

                <div class="modal-body">
                    <div class="col-lg-12" style="margin:2px">
                        <label class="col-lg-4 ">Teacher Firstname</label>
                        <div class="col-lg-8">@Html.TextBoxFor(m => m.firstName, new { @class = "form-control input-sm col-lg-8" })</div>
                    </div>
                    <div class="col-lg-12" style="margin:2px">
                        <label class="col-lg-4">Teacher Lastname</label>
                        <div class="col-lg-8">@Html.TextBoxFor(m => m.lastName, new { @class = "form-control input-sm col-lg-8" })</div>
                    </div>
                    <div class="col-lg-12" style="margin:2px">
                        <label class="col-lg-4">Teacher Username</label>
                        <div class="col-lg-8">@Html.TextBoxFor(m => m.username, new { @class = "form-control input-sm col-lg-8" })</div>
                    </div>
                    <div class="col-lg-12" style="margin:2px">
                        <label class="col-lg-4">Teacher Password</label>
                        <div class="col-lg-8">@Html.TextBoxFor(m => m.password, new { @class = "form-control input-sm col-lg-8" })</div>
                    </div>
                    <div class="col-lg-12" style="margin:2px">
                        <label class="col-lg-4">Teacher Schoolid</label>
                        <div class="col-lg-8">@Html.TextBox("schoolid", Int32.Parse(Session["loggedinuserschoolid"].ToString()), new { @class = "form-control input-sm col-lg-8", name = "schoolid" })</div>
                    </div>
                </div>
                <div class="modal-footer">

                    <button class="btn btn-default" id="addteacher">Add Teacher</button>
                    <button class="btn btn-default" data-dismiss="modal">Close</button>

                </div>

            </div>

        </div>
    }
</div>