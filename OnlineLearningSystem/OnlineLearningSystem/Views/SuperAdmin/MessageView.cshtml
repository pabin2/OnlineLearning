@{
    ViewBag.Title = "MessageView";
}
<script>
    $('.messageview').css('background', 'linear-gradient(45deg, #b2d01a 0%,#b2d01a 100%)');
    $('.messageview').css('border-radius', '20px');
    $('.messageview').css('color', 'black');
    $('.messageview').css("box-shadow", "10px 10px 12px #888888");
</script>
<button class="btn spacing">Compose Message</button>
<ul class="list-group">
    <li class="list-group-item listtopBorder " data-toggle="modal" data-target="#myModal">

        <div class="row">
            <div class="col-lg-2">Date</div>
            <div class="col-lg-3">From</div>
            <div class="col-lg-5">Subject</div>
            <div class="col-lg-2">
                View Message
            </div>
    </li>
    <li class="list-group-item  listInformation">
        <div class="row">
            <div class="col-lg-2">2015-12-03</div>
            <div class="col-lg-3">Ram</div>
            <div class="col-lg-5">Assignment Title</div>
            <div class="col-lg-2">
                <button class="btn btn-default" data-toggle="modal" data-target="#myModal">
                    <img src="~/Content/images/view.png " width="20px" title="View Message" />
                </button>
            </div>
        </div>
    </li>
</ul>


<!--modal-->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    <li class="list-group-item listtopBorder ">
                        <div class="row">
                            <div class="pull-left" style="margin:0px 10px">Message Title</div>
                            <div class="pull-right" style="margin:0px 10px">2015-12-03</div>
                        </div>
                    </li>
                    <li class="list-group-item ">
                        <p class="bold"><a href="profiles.php?XID=1537338">Viking</a> says:</p>

                        <p class="unreset">Hows things goin buddy?</p>
                    </li>
                    <li class="list-group-item" style="text-align:center">
                        <a href="#">Delete</a>
                    </li>
                </ul>
                <ul class="list-group ">
                    <li class="list-group-item listtopBorder">
                        Reply
                    </li>
                    <li class="list-group-item ">
                        <textarea style="width:100%"></textarea>
                        <br />
                        <button class="btn btn-success">Send</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
