@model OnlineLearningSystem.Models.logindetail

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<html>
<head>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-editable.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <link href="~/Content/css/project.css" rel="stylesheet" />


</head>
<body style="background-image: url('../../Content/images/bg.png')">
    <div class="container">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="loginForm">
                    <br />
                    <div style="font-size:x-large">Please login</div>
                    <br />

                    <div style="width:60%;margin:3px auto">

                        <div class="editor-field">
                            <input class="form-control input-sm" type="text" name="username" id="username" placeholder="Usernmae">

                        </div>
                    </div>
                    <div style="width:60%;margin:3px auto">
                        <div class="editor-field">
                            <input class="form-control input-sm" type="password" name="password" id="password" placeholder="Password">
                        </div>
                    </div>
                    <div style="width:60%;margin:3px auto">
                        <div class="editor-field">
                            <input class="form-control input-sm" type="text" name="school" id="school" placeholder="School">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12" style="text-align:center;margin:10px;">
                    <button class="btn btn-danger" id="login">Login</button>
                </div>
            }
        </div>
    </div>
</body>
</html>



